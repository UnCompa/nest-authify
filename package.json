{
  "name": "nest-auth-kit",
  "version": "1.0.0",
  "description": "Complete authentication and authorization package for NestJS - Monolith and Microservices ready with OAuth, JWT, Redis sessions",
  "author": "UnCompa",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "nestjs",
    "authentication",
    "authorization",
    "jwt",
    "oauth",
    "passport",
    "google-oauth",
    "facebook-oauth",
    "github-oauth",
    "microservices",
    "redis",
    "sessions",
    "security",
    "auth",
    "rbac",
    "role-based-access-control",
    "nestjs-auth",
    "nestjs-jwt",
    "nestjs-passport"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UnCompa/nest-auth-kit.git"
  },
  "bugs": {
    "url": "https://github.com/UnCompa/nest-auth-kit/issues"
  },
  "homepage": "https://github.com/UnCompa/nest-auth-kit#readme",
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.0",
    "@nestjs/core": "^9.0.0 || ^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^9.0.0 || ^10.0.0",
    "passport": "^0.6.0 || ^0.7.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "ioredis": "^5.3.2"
  },
  "optionalDependencies": {
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-facebook": "^3.0.0",
    "@types/passport-github2": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/index.ts",
      "!**/*.interface.ts",
      "!**/*.spec.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}